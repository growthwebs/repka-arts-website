{% doc %}
  @prompt
    I want to build a section similar to a product highlight but for selling a gift card
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gift-card-highlight-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-gift-card-highlight-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-gift-card-image-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    position: relative;
  }

  .ai-gift-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-gift-card-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-gift-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-gift-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-gift-card-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-gift-card-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-gift-card-badge-{{ ai_gen_id }} {
    display: inline-block;
    padding: 6px 12px;
    background-color: {{ block.settings.badge_background_color }};
    color: {{ block.settings.badge_text_color }};
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 15px;
    align-self: flex-start;
  }

  .ai-gift-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    line-height: 1.2;
    margin: 0;
    color: {{ block.settings.title_color }};
  }

  .ai-gift-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin: 0;
    color: {{ block.settings.text_color }};
  }

  .ai-gift-card-amounts-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin: 8px 0;
  }

  .ai-gift-card-amount-{{ ai_gen_id }} {
    padding: 8px 16px;
    background-color: {{ block.settings.amount_background_color }};
    color: {{ block.settings.amount_text_color }};
    border: 1px solid {{ block.settings.amount_border_color }};
    border-radius: 15px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-gift-card-amount-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.amount_hover_background_color }};
    color: {{ block.settings.amount_hover_text_color }};
    border-color: {{ block.settings.amount_hover_border_color }};
    transform: translateY(-1px);
  }

  .ai-gift-card-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: 1px solid {{ block.settings.button_border_color }};
    border-radius: 15px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .ai-gift-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-1px);
  }

  .ai-gift-card-features-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-gift-card-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: {{ block.settings.text_color }};
  }

  .ai-gift-card-feature-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    color: {{ block.settings.feature_icon_color }};
    flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-gift-card-highlight-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: {{ block.settings.content_gap | times: 0.75 }}px;
      padding: {{ block.settings.section_padding | times: 0.75 }}px;
    }

    .ai-gift-card-highlight-{{ ai_gen_id }}--reverse {
      flex-direction: column;
    }

    .ai-gift-card-image-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
      max-width: 400px;
    }

    .ai-gift-card-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-gift-card-amounts-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-gift-card-button-{{ ai_gen_id }} {
      align-self: center;
    }
  }
{% endstyle %}

<div
  class="ai-gift-card-highlight-{{ ai_gen_id }} {% if block.settings.reverse_layout %}ai-gift-card-highlight-{{ ai_gen_id }}--reverse{% endif %}"
  {{ block.shopify_attributes }}
>
  <div class="ai-gift-card-image-{{ ai_gen_id }}">
    <div class="ai-gift-card-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 800 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-gift-card-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-gift-card-empty-state-{{ ai_gen_id }}">
            Add a gift card image
          </div>
        </div>
      {% endif %}
    </div>
  </div>

  <div class="ai-gift-card-content-{{ ai_gen_id }}">
    {% if block.settings.badge_text != blank %}
      <span class="ai-gift-card-badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</span>
    {% endif %}

    {% if block.settings.title != blank %}
      <h2 class="ai-gift-card-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-gift-card-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    {% if block.settings.show_amounts %}
      <div class="ai-gift-card-amounts-{{ ai_gen_id }}">
        {% assign amounts = block.settings.gift_card_amounts | split: ',' %}
        {% for amount in amounts %}
          {% assign trimmed_amount = amount | strip %}
          {% if trimmed_amount != blank %}
            <a
              href="{{ block.settings.gift_card_url }}?amount={{ trimmed_amount | times: 100 }}"
              class="ai-gift-card-amount-{{ ai_gen_id }}"
            >
              {{ trimmed_amount | money }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    {% if block.settings.show_features %}
      <div class="ai-gift-card-features-{{ ai_gen_id }}">
        {% if block.settings.feature_1 != blank %}
          <div class="ai-gift-card-feature-{{ ai_gen_id }}">
            <svg class="ai-gift-card-feature-icon-{{ ai_gen_id }}" viewBox="0 0 16 16" fill="currentColor">
              <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
            </svg>
            <span>{{ block.settings.feature_1 }}</span>
          </div>
        {% endif %}

        {% if block.settings.feature_2 != blank %}
          <div class="ai-gift-card-feature-{{ ai_gen_id }}">
            <svg class="ai-gift-card-feature-icon-{{ ai_gen_id }}" viewBox="0 0 16 16" fill="currentColor">
              <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
            </svg>
            <span>{{ block.settings.feature_2 }}</span>
          </div>
        {% endif %}

        {% if block.settings.feature_3 != blank %}
          <div class="ai-gift-card-feature-{{ ai_gen_id }}">
            <svg class="ai-gift-card-feature-icon-{{ ai_gen_id }}" viewBox="0 0 16 16" fill="currentColor">
              <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
            </svg>
            <span>{{ block.settings.feature_3 }}</span>
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_url != blank %}
      <a
        href="{{ block.settings.button_url }}"
        class="ai-gift-card-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

