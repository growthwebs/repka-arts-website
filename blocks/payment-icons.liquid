
{% assign block_settings = block.settings %}

{%- assign block_settings = block.settings -%}

<div
  class="
    payment-icons
    spacing-style
  "
  data-columns="{{ block_settings.horizontal_alignment }}"
  style="
    {% render 'spacing-padding', settings: block_settings %}
    --icon-gap: {{ block_settings.gap }}px;
    --alignment: {{ block_settings.horizontal_alignment }};
  "
  {{ block.shopify_attributes }}
>
  <span class="visually-hidden">{{ 'blocks.payment_methods' | t }}</span>
  <ul
    class="payment-icons__list"
    role="list"
  >
    {%- for type in shop.enabled_payment_types -%}
      <li class="payment-icons__item">
        {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
      </li>
    {%- endfor -%}
  </ul>
</div>

{% stylesheet %}
  .payment-icons {
    width: 100%;
  }

  .payment-icons__list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(72px, 1fr));
    justify-content: var(--alignment);
    align-items: stretch;
    gap: var(--icon-gap);
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .payment-icons[data-columns='left'] .payment-icons__list {
    justify-items: start;
  }

  .payment-icons[data-columns='center'] .payment-icons__list {
    justify-items: center;
  }

  .payment-icons[data-columns='right'] .payment-icons__list {
    justify-items: end;
  }

  .payment-icons[data-columns='space-between'] .payment-icons__list {
    justify-items: stretch;
  }

  .payment-icons__item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: calc(var(--icon-gap) / 1.5);
    background: color-mix(in srgb, var(--color-foreground, #000) 4%, transparent);
    border-radius: 8px;
  }

  .payment-icons__item .icon {
    width: clamp(40px, 6vw, 64px);
    height: auto;
    max-height: 32px;
  }

  @media screen and (min-width: 750px) {
    .payment-icons__list {
      grid-template-columns: repeat(auto-fit, minmax(88px, min(10vw, 120px)));
    }
  }
{% endstylesheet %}

{% schema %}
