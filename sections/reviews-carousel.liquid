{% comment %}
  Reviews Carousel Section
  Displays customer reviews in a carousel format
{% endcomment %}

<div class="reviews-carousel-section page-width section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <div class="reviews-carousel__header">
      <h2 class="reviews-carousel__title {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    </div>
  {% endif %}

  <div class="reviews-carousel__container">
    <div class="reviews-carousel__wrapper" id="reviews-carousel-{{ section.id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'review' %}
            <div class="reviews-carousel__slide" {{ block.shopify_attributes }}>
              <div class="review-card">
                {% if block.settings.rating > 0 %}
                  <div class="review-stars">
                    {% for i in (1..5) %}
                      {% if i <= block.settings.rating %}
                        <span class="star filled">★</span>
                      {% else %}
                        <span class="star">☆</span>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}

                {% if block.settings.review_text != blank %}
                  <blockquote class="review-text">"{{ block.settings.review_text }}"</blockquote>
                {% endif %}

                <div class="review-footer">
                  {% if block.settings.customer_name != blank %}
                    <strong class="review-name">{{ block.settings.customer_name }}</strong>
                  {% endif %}
                  {% if block.settings.customer_location != blank %}
                    <span class="review-location">{{ block.settings.customer_location }}</span>
                  {% endif %}
                  {% if block.settings.review_source != blank %}
                    <small class="review-source">{{ block.settings.review_source }}</small>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.blocks.size > 1 %}
      <div class="reviews-carousel__navigation">
        <button class="carousel-btn carousel-prev" aria-label="Previous review">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="carousel-btn carousel-next" aria-label="Next review">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>

      <div class="reviews-carousel__dots">
        {% for block in section.blocks %}
          {% if block.type == 'review' %}
            <button
              class="carousel-dot {% if forloop.first %}active{% endif %}"
              aria-label="Go to review {{ forloop.index }}"
              data-slide="{{ forloop.index0 }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .reviews-carousel-section {
    padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px;
  }

  .reviews-carousel__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .reviews-carousel__title {
    margin: 0;
    color: var(--color-foreground);
    font-size: 2.5rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .reviews-carousel__container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .reviews-carousel__wrapper {
    display: flex;
    overflow: hidden;
    border-radius: 16px;
    width: 100%;
  }

  .reviews-carousel__slide {
    min-width: 100%;
    flex-shrink: 0;
    transition: transform 0.5s ease-in-out;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 2rem;
    box-sizing: border-box;
  }

  .review-card {
    background: {{ section.settings.card_background_color | default: '#FFFFFF' }};
    border-radius: 20px;
    padding: 4rem 3rem;
    margin: 0;
    text-align: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    transition: all 0.4s ease;
    border: 1px solid {{ section.settings.card_border_color | default: 'rgba(0, 0, 0, 0.06)' }};
    position: relative;
    overflow: hidden;
    max-width: 800px;
    width: 100%;
    box-sizing: border-box;
  }

  .review-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #ffd700, #ffed4e);
  }

  .review-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
  }

  .review-stars {
    margin-bottom: 2rem;
  }

  .star {
    color: #ffd700;
    font-size: 1.8rem;
    margin: 0 0.2rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .review-text {
    font-size: 1.4rem;
    line-height: 1.8;
    font-style: italic;
    margin: 0 0 2.5rem 0;
    color: #2c2c2c;
    font-weight: 400;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .review-footer {
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    padding-top: 1.5rem;
  }

  .review-name {
    display: block;
    font-family: var(--font-heading--family);
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .review-location {
    display: block;
    color: #666;
    font-style: italic;
    margin-bottom: 0.75rem;
    font-size: 1rem;
  }

  .review-source {
    color: #999;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
  }

  .reviews-carousel__navigation {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    align-items: center;
    pointer-events: none;
    z-index: 10;
  }

  .carousel-btn {
    background: rgba(255, 255, 255, 0.95);
    color: #333;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    width: 3.5rem;
    height: 3.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
  }

  .carousel-btn:hover {
    background: #333;
    color: white;
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  }

  .carousel-prev {
    margin-left: 0;
  }

  .carousel-next {
    margin-right: 0;
  }

  .reviews-carousel__dots {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 3rem;
    padding: 0 2rem;
  }

  .carousel-dot {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    border: 2px solid rgba(0, 0, 0, 0.2);
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    flex-shrink: 0;
  }

  .carousel-dot.active {
    background: #333;
    border-color: #333;
    transform: scale(1.2);
  }

  .carousel-dot:hover:not(.active) {
    border-color: #666;
    background: rgba(0, 0, 0, 0.1);
    transform: scale(1.1);
  }

  /* Large Desktop */
  @media screen and (min-width: 1200px) {
    .reviews-carousel__container {
      max-width: 1600px;
      padding: 0 4rem;
    }

    .review-card {
      max-width: 900px;
      padding: 5rem 4rem;
    }

    .review-text {
      font-size: 1.5rem;
      max-width: 700px;
    }

    .reviews-carousel__title {
      font-size: 3rem;
    }
  }

  /* Tablet Responsive */
  @media screen and (max-width: 1024px) {
    .reviews-carousel__container {
      max-width: 900px;
      padding: 0 2rem;
    }

    .review-card {
      max-width: 700px;
      padding: 3.5rem 2.5rem;
    }

    .review-text {
      max-width: 500px;
    }
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .reviews-carousel-section {
      padding: 60px 0;
    }

    .reviews-carousel__container {
      max-width: 100%;
      padding: 0;
    }

    .reviews-carousel__title {
      font-size: 28px;
      margin-bottom: 40px;
      line-height: 1.2;
      text-align: center;
      padding: 0 20px;
    }

    .reviews-carousel__wrapper {
      border-radius: 0;
      margin: 0;
    }

    .reviews-carousel__slide {
      padding: 0 20px;
    }

    .review-card {
      width: 100%;
      max-width: none;
      padding: 24px 20px;
      margin: 0;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      box-sizing: border-box;
    }

    .review-text {
      font-size: 16px;
      line-height: 1.6;
      width: 100%;
      margin-bottom: 20px;
      word-wrap: break-word;
