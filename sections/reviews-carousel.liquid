{% comment %}
  Reviews Carousel Section
  Displays customer reviews in a carousel format
{% endcomment %}

<div class="reviews-carousel-section page-width section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <div class="reviews-carousel__header">
      <h2 class="reviews-carousel__title {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    </div>
  {% endif %}

  <div class="reviews-carousel__container">
    <div class="reviews-carousel__wrapper" id="reviews-carousel-{{ section.id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'review' %}
            <div class="reviews-carousel__slide" {{ block.shopify_attributes }}>
              <div class="review-card">
                {% if block.settings.rating > 0 %}
                  <div class="review-stars">
                    {% for i in (1..5) %}
                      {% if i <= block.settings.rating %}
                        <span class="star filled">★</span>
                      {% else %}
                        <span class="star">☆</span>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}

                {% if block.settings.review_text != blank %}
                  <blockquote class="review-text">"{{ block.settings.review_text }}"</blockquote>
                {% endif %}

                <div class="review-footer">
                  {% if block.settings.customer_name != blank %}
                    <strong class="review-name">{{ block.settings.customer_name }}</strong>
                  {% endif %}
                  {% if block.settings.customer_location != blank %}
                    <span class="review-location">{{ block.settings.customer_location }}</span>
                  {% endif %}
                  {% if block.settings.review_source != blank %}
                    <small class="review-source">{{ block.settings.review_source }}</small>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.blocks.size > 1 %}
      <div class="reviews-carousel__navigation">
        <button class="carousel-btn carousel-prev" aria-label="Previous review">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="carousel-btn carousel-next" aria-label="Next review">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>

      <div class="reviews-carousel__dots">
        {% for block in section.blocks %}
          {% if block.type == 'review' %}
            <button
              class="carousel-dot {% if forloop.first %}active{% endif %}"
              aria-label="Go to review {{ forloop.index }}"
              data-slide="{{ forloop.index0 }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .reviews-carousel-section {
    padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px;
  }

  .reviews-carousel__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .reviews-carousel__title {
    margin: 0;
    color: var(--color-foreground);
    font-size: 2.5rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .reviews-carousel__container {
    position: relative;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .reviews-carousel__wrapper {
    display: flex;
    overflow: hidden;
    border-radius: 16px;
  }

  .reviews-carousel__slide {
    min-width: 100%;
    flex-shrink: 0;
    transition: transform 0.5s ease-in-out;
  }

  .review-card {
    background: {{ section.settings.card_background_color | default: '#FFFFFF' }};
    border-radius: 20px;
    padding: 3rem 2.5rem;
    margin: 0 1.5rem;
    text-align: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    transition: all 0.4s ease;
    border: 1px solid {{ section.settings.card_border_color | default: 'rgba(0, 0, 0, 0.06)' }};
    position: relative;
    overflow: hidden;
  }

  .review-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #ffd700, #ffed4e);
  }

  .review-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
  }

  .review-stars {
    margin-bottom: 2rem;
  }

  .star {
    color: #ffd700;
    font-size: 1.8rem;
    margin: 0 0.2rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .review-text {
    font-size: 1.3rem;
    line-height: 1.7;
    font-style: italic;
    margin: 0 0 2.5rem 0;
    color: #2c2c2c;
    font-weight: 400;
  }

  .review-footer {
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    padding-top: 1rem;
  }

  .review-name {
    display: block;
    font-family: var(--font-heading--family);
    font-weight: var(--font-heading--weight);
    color: var(--color-foreground);
    margin-bottom: 0.25rem;
  }

  .review-location {
    display: block;
    color: rgba(var(--color-foreground), 0.7);
    font-style: italic;
    margin-bottom: 0.5rem;
  }

  .review-source {
    color: rgba(var(--color-foreground), 0.5);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .reviews-carousel__navigation {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    display: flex;
    justify-content: space-between;
    pointer-events: none;
  }

  .carousel-btn {
    background: var(--color-background);
    color: var(--color-foreground);
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 50%;
    width: 3rem;
    height: 3rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
  }

  .carousel-btn:hover {
    background: var(--color-foreground);
    color: var(--color-background);
    transform: scale(1.1);
  }

  .carousel-prev {
    margin-left: -1.5rem;
  }

  .carousel-next {
    margin-right: -1.5rem;
  }

  .reviews-carousel__dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 2rem;
  }

  .carousel-dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    border: none;
    background: rgba(var(--color-foreground), 0.3);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .carousel-dot.active,
  .carousel-dot:hover {
    background: var(--color-foreground);
    transform: scale(1.2);
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .review-card {
      padding: 2rem 1.5rem;
      margin: 0 0.5rem;
    }

    .carousel-btn {
      width: 2.5rem;
      height: 2.5rem;
    }

    .carousel-prev {
      margin-left: -1rem;
    }

    .carousel-next {
      margin-right: -1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carouselId = 'reviews-carousel-{{ section.id }}';
    const carousel = document.getElementById(carouselId);

    if (!carousel) return;

    const slides = carousel.querySelectorAll('.reviews-carousel__slide');
    const prevBtn = carousel.closest('.reviews-carousel-section').querySelector('.carousel-prev');
    const nextBtn = carousel.closest('.reviews-carousel-section').querySelector('.carousel-next');
    const dots = carousel.closest('.reviews-carousel-section').querySelectorAll('.carousel-dot');

    let currentSlide = 0;
    let autoSlideInterval;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.style.transform = `translateX(-${index * 100}%)`;
      });

      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });

      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(prev);
    }

    function startAutoSlide() {
      autoSlideInterval = setInterval(nextSlide, 5000);
    }

    function stopAutoSlide() {
      if (autoSlideInterval) {
        clearInterval(autoSlideInterval);
      }
    }

    // Event listeners
    if (nextBtn)
      nextBtn.addEventListener('click', () => {
        nextSlide();
        resetAutoSlide();
      });

    if (prevBtn)
      prevBtn.addEventListener('click', () => {
        prevSlide();
        resetAutoSlide();
      });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        resetAutoSlide();
      });
    });

    function resetAutoSlide() {
      stopAutoSlide();
      startAutoSlide();
    }

    // Pause on hover
    carousel.addEventListener('mouseenter', stopAutoSlide);
    carousel.addEventListener('mouseleave', startAutoSlide);

    // Initialize
    showSlide(0);
    startAutoSlide();
  });
</script>

