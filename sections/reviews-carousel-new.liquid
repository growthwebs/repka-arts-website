{% comment %}
  Responsive Reviews Carousel Section
  Mobile-first approach with proper CSS Grid/Flexbox responsive design
  Single content source, adaptive layout
{% endcomment %}

<div class="reviews-carousel-section page-width section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <div class="reviews-carousel__header">
      <h2 class="reviews-carousel__title {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    </div>
  {% endif %}

  <div class="reviews-carousel__container">
    <div class="reviews-carousel__inner-container">
      <div class="reviews-carousel__wrapper" id="reviews-carousel-{{ section.id }}">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'review' %}
              <div class="reviews-carousel__slide" {{ block.shopify_attributes }}>
                <div class="review-card">
                  <div class="review-content">
                    {% if block.settings.rating > 0 %}
                      <div class="review-stars">
                        {% for i in (1..5) %}
                          {% if i <= block.settings.rating %}
                            <span class="star filled">★</span>
                          {% else %}
                            <span class="star">☆</span>
                          {% endif %}
                        {% endfor %}
                      </div>
                    {% endif %}

                    {% if block.settings.review_text != blank %}
                      <blockquote class="review-text">"{{ block.settings.review_text }}"</blockquote>
                    {% endif %}
                  </div>

                  <div class="review-footer">
                    {% if block.settings.customer_name != blank %}
                      <strong class="review-name">{{ block.settings.customer_name }}</strong>
                    {% endif %}
                    {% if block.settings.customer_location != blank %}
                      <span class="review-location">{{ block.settings.customer_location }}</span>
                    {% endif %}
                    {% if block.settings.review_source != blank %}
                      <small class="review-source">{{ block.settings.review_source }}</small>
                    {% endif %}
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>

      {% if section.blocks.size > 1 %}
        <div class="reviews-carousel__navigation">
          <button class="carousel-btn carousel-prev" aria-label="Previous review">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button class="carousel-btn carousel-next" aria-label="Next review">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      {% endif %}
    </div>

    {% if section.blocks.size > 1 %}
      <div class="reviews-carousel__dots">
        {% for block in section.blocks %}
          {% if block.type == 'review' %}
            <button
              class="carousel-dot {% if forloop.first %}active{% endif %}"
              aria-label="Go to review {{ forloop.index }}"
              data-slide="{{ forloop.index0 }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .reviews-carousel-section {
    padding: clamp(3rem, 8vw, 6rem) 0;
    background: var(--color-background);
  }

  .reviews-carousel__header {
    text-align: center;
    margin-bottom: clamp(2rem, 6vw, 4rem);
    padding: 0 clamp(1rem, 4vw, 2rem);
  }

  .reviews-carousel__title {
    margin: 0;
    color: var(--color-foreground);
    font-family: var(--font-heading--family);
    font-weight: var(--font-heading--weight);
    font-size: clamp(2rem, 5vw, 3rem);
    line-height: 1.1;
  }

  .reviews-carousel__container {
    position: relative;
    width: 100%;
    max-width: min(100vw, 1200px);
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 2rem);
  }

  .reviews-carousel__inner-container {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 clamp(1rem, 4vw, 3rem);
  }

  .reviews-carousel__wrapper {
    display: flex;
    overflow: hidden;
    width: 100%;
    max-width: calc(100% - clamp(2rem, 8vw, 6rem));
  }

  .reviews-carousel__slide {
    min-width: 100%;
    flex-shrink: 0;
    transition: transform 0.5s ease-in-out;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 clamp(0.5rem, 2vw, 1rem);
  }

  .review-card {
    background: {{ section.settings.card_background_color | default: 'var(--color-background)' }};
    border-radius: var(--style-border-radius);
    padding: clamp(1.5rem, 4vw, 3rem);
    text-align: center;
    box-shadow: var(--style-shadow);
    border: var(--style-border-width) solid {{ section.settings.card_border_color | default: 'var(--color-border)' }};
    width: 100%;
    max-width: min(90vw, clamp(320px, 50vw, 800px));
    min-height: clamp(400px, 70vh, 500px);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    overflow: visible;
  }

  .review-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #ffd700, #ffed4e);
  }

  .review-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
  }

  .review-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .review-stars {
    margin-bottom: 16px;
  }

  .star {
    color: #ffd700;
    font-size: 20px;
    margin: 0 2px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .review-text {
    font-size: clamp(0.9rem, 2.2vw, 1.3rem);
    line-height: 1.5;
    font-style: italic;
    margin: 0 0 clamp(1rem, 3vw, 2rem) 0;
    color: var(--color-foreground);
    font-family: var(--font-body--family);
    font-weight: var(--font-body--weight);
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .review-footer {
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    padding-top: clamp(0.75rem, 2vw, 1.5rem);
  }

  .review-name {
    display: block;
    font-family: var(--font-heading--family);
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: clamp(0.25rem, 1vw, 0.5rem);
    font-size: clamp(0.9rem, 2vw, 1.1rem);
  }

  .review-location {
    display: block;
    color: #666;
    font-style: italic;
    margin-bottom: clamp(0.5rem, 1.5vw, 0.75rem);
    font-size: clamp(0.8rem, 1.8vw, 1rem);
  }

  .review-source {
    color: #999;
    font-size: clamp(0.7rem, 1.5vw, 0.9rem);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
  }

  .reviews-carousel__navigation {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    align-items: center;
    pointer-events: none;
    z-index: 10;
    padding: 0 clamp(0.5rem, 2vw, 1rem);
  }

  .carousel-btn {
    background: rgba(255, 255, 255, 0.95);
    color: #333;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    width: clamp(2rem, 4vw, 3rem);
    height: clamp(2rem, 4vw, 3rem);
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
    box-shadow: 0 clamp(2px, 0.5vw, 4px) clamp(8px, 2vw, 16px) rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    font-size: clamp(0.8rem, 1.5vw, 1.2rem);
  }

  .carousel-btn:hover {
    background: #333;
    color: white;
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  }

  .reviews-carousel__dots {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
    margin-top: 2rem;
    list-style: none;
    padding: 0;
    margin-left: 0;
  }

  .carousel-dot {
    display: inline-block;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: var(--color-border);
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    outline: none;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  .carousel-dot.active {
    background: var(--color-foreground);
    transform: scale(1.2);
  }

  .carousel-dot:hover:not(.active) {
    background: var(--color-foreground);
    opacity: 0.6;
  }

  /* Desktop - Intelligent landscape layout using container queries */
  @container (min-width: 800px) {
    .review-card {
      flex-direction: row;
      align-items: center;
      text-align: left;
      aspect-ratio: 2 / 1;
    }

    .review-content {
      flex: 1;
      padding-right: clamp(2rem, 4vw, 3rem);
    }

    .review-footer {
      border-top: none;
      border-left: 1px solid var(--color-border);
      padding-left: clamp(1.5rem, 3vw, 2rem);
      text-align: center;
      min-width: clamp(120px, 20vw, 150px);
    }
  }

  /* Mobile-specific fixes for text overflow and spacing */
  @media screen and (max-width: 749px) {
    .reviews-carousel__container {
      padding: 0 0.5rem;
    }

    .reviews-carousel__inner-container {
      padding: 0 0.5rem;
    }

    .reviews-carousel__wrapper {
      max-width: calc(100% - 1rem);
    }

    .review-card {
      min-height: clamp(500px, 90vh, 700px);
      aspect-ratio: unset;
      height: auto;
      padding: clamp(1rem, 3vw, 2rem);
    }

    .review-text {
      font-size: clamp(0.85rem, 2vw, 1.1rem);
      line-height: 1.4;
    }

    .carousel-btn {
      width: clamp(1.5rem, 3vw, 2rem);
      height: clamp(1.5rem, 3vw, 2rem);
    }

    .carousel-dot {
      width: 4px !important;
      height: 4px !important;
      min-width: 4px !important;
      min-height: 4px !important;
      max-width: 4px !important;
      max-height: 4px !important;
    }
  }

  /* Fallback for browsers without container query support */
  @media screen and (min-width: 1024px) {
    .review-card {
      flex-direction: row;
      align-items: center;
      text-align: left;
      aspect-ratio: 2 / 1;
    }

    .review-content {
      flex: 1;
      padding-right: clamp(2rem, 4vw, 3rem);
    }

    .review-footer {
      border-top: none;
      border-left: 1px solid var(--color-border);
      padding-left: clamp(1.5rem, 3vw, 2rem);
      text-align: center;
      min-width: clamp(120px, 20vw, 150px);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carouselId = 'reviews-carousel-{{ section.id }}';
    const carousel = document.getElementById(carouselId);

    if (!carousel) return;

    const slides = carousel.querySelectorAll('.reviews-carousel__slide');
    const prevBtn = carousel.closest('.reviews-carousel-section').querySelector('.carousel-prev');
    const nextBtn = carousel.closest('.reviews-carousel-section').querySelector('.carousel-next');
    const dots = carousel.closest('.reviews-carousel-section').querySelectorAll('.carousel-dot');

    let currentSlide = 0;
    let autoSlideInterval;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.style.transform = `translateX(-${index * 100}%)`;
      });

      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });

      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(prev);
    }

    function startAutoSlide() {
      autoSlideInterval = setInterval(nextSlide, 5000);
    }

    function stopAutoSlide() {
      if (autoSlideInterval) {
        clearInterval(autoSlideInterval);
      }
    }

    // Event listeners
    if (nextBtn)
      nextBtn.addEventListener('click', () => {
        nextSlide();
        resetAutoSlide();
      });

    if (prevBtn)
      prevBtn.addEventListener('click', () => {
        prevSlide();
        resetAutoSlide();
      });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        resetAutoSlide();
      });
    });

    function resetAutoSlide() {
      stopAutoSlide();
      startAutoSlide();
    }

    // Pause on hover
    carousel.addEventListener('mouseenter', stopAutoSlide);
    carousel.addEventListener('mouseleave', startAutoSlide);

    // Initialize
    showSlide(0);
    startAutoSlide();
  });
</script>

