{% comment %}
  Responsive Reviews Carousel Section
  Mobile-first approach with proper CSS Grid/Flexbox responsive design
  Single content source, adaptive layout
{% endcomment %}

<div class="reviews-carousel-section page-width section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <div class="reviews-carousel__header">
      <h2 class="reviews-carousel__title {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    </div>
  {% endif %}

  <div class="reviews-carousel__container">
    <div class="reviews-carousel__wrapper" id="reviews-carousel-{{ section.id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'review' %}
            <div class="reviews-carousel__slide" {{ block.shopify_attributes }}>
              <div class="review-card">
                <div class="review-content">
                  {% if block.settings.rating > 0 %}
                    <div class="review-stars">
                      {% for i in (1..5) %}
                        {% if i <= block.settings.rating %}
                          <span class="star filled">★</span>
                        {% else %}
                          <span class="star">☆</span>
                        {% endif %}
                      {% endfor %}
                    </div>
                  {% endif %}

                  {% if block.settings.review_text != blank %}
                    <blockquote class="review-text">"{{ block.settings.review_text }}"</blockquote>
                  {% endif %}
                </div>

                <div class="review-footer">
                  {% if block.settings.customer_name != blank %}
                    <strong class="review-name">{{ block.settings.customer_name }}</strong>
                  {% endif %}
                  {% if block.settings.customer_location != blank %}
                    <span class="review-location">{{ block.settings.customer_location }}</span>
                  {% endif %}
                  {% if block.settings.review_source != blank %}
                    <small class="review-source">{{ block.settings.review_source }}</small>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.blocks.size > 1 %}
      <div class="reviews-carousel__navigation">
        <button class="carousel-btn carousel-prev" aria-label="Previous review">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="carousel-btn carousel-next" aria-label="Next review">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>

      <div class="reviews-carousel__dots">
        {% for block in section.blocks %}
          {% if block.type == 'review' %}
            <button
              class="carousel-dot {% if forloop.first %}active{% endif %}"
              aria-label="Go to review {{ forloop.index }}"
              data-slide="{{ forloop.index0 }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .reviews-carousel-section {
    padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px;
  }

  .reviews-carousel__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .reviews-carousel__title {
    margin: 0;
    color: var(--color-foreground);
    font-size: 2.5rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .reviews-carousel__container {
    position: relative;
    width: 100%;
    margin: 0 auto;
    padding: 0;
  }

  .reviews-carousel__wrapper {
    display: flex;
    overflow: hidden;
    border-radius: 16px;
    width: 100%;
  }

  .reviews-carousel__slide {
    min-width: 100%;
    flex-shrink: 0;
    transition: transform 0.5s ease-in-out;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 20px;
    box-sizing: border-box;
  }

  /* Mobile First - Tall Portrait Cards */
  .review-card {
    background: {{ section.settings.card_background_color | default: '#FFFFFF' }};
    border-radius: 20px;
    padding: 24px;
    margin: 0;
    text-align: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    transition: all 0.4s ease;
    border: 1px solid {{ section.settings.card_border_color | default: 'rgba(0, 0, 0, 0.06)' }};
    position: relative;
    overflow: hidden;
    width: calc(100vw - 80px);
    height: auto;
    min-height: 480px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .review-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #ffd700, #ffed4e);
  }

  .review-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
  }

  .review-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .review-stars {
    margin-bottom: 16px;
  }

  .star {
    color: #ffd700;
    font-size: 20px;
    margin: 0 2px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .review-text {
    font-size: 18px;
    line-height: 1.7;
    font-style: italic;
    margin: 0 0 24px 0;
    color: #2c2c2c;
    font-weight: 400;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .review-footer {
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    padding-top: 16px;
  }

  .review-name {
    display: block;
    font-family: var(--font-heading--family);
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 8px;
    font-size: 16px;
  }

  .review-location {
    display: block;
    color: #666;
    font-style: italic;
    margin-bottom: 8px;
    font-size: 14px;
  }

  .review-source {
    color: #999;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
  }

  .reviews-carousel__navigation {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    align-items: center;
    pointer-events: none;
    z-index: 10;
    padding: 0 clamp(1rem, 3vw, 2rem);
  }

  .carousel-btn {
    background: rgba(255, 255, 255, 0.95);
    color: #333;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    width: clamp(2.5rem, 5vw, 3.5rem);
    height: clamp(2.5rem, 5vw, 3.5rem);
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
    box-shadow: 0 clamp(2px, 0.5vw, 4px) clamp(8px, 2vw, 16px) rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    font-size: clamp(1rem, 2vw, 1.5rem);
  }

  .carousel-btn:hover {
    background: #333;
    color: white;
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  }

  .reviews-carousel__dots {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 12px;
    margin-top: 40px;
    padding: 0 20px;
  }

  .carousel-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.2);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    flex-shrink: 0;
    border: none;
    outline: none;
  }

  .carousel-dot.active {
    background: rgba(0, 0, 0, 0.8);
    transform: scale(1.3);
  }

  .carousel-dot:hover:not(.active) {
    background: rgba(0, 0, 0, 0.4);
    transform: scale(1.1);
  }

  /* Mobile Portrait (≤749px) - Default styles already applied above */

  /* Tablet Portrait (750px - 1023px) */
  @media screen and (min-width: 750px) and (max-width: 1023px) and (orientation: portrait) {
    .reviews-carousel__slide {
      padding: 0 80px;
    }

    .review-card {
      width: calc(100vw - 160px);
      max-width: 500px;
      padding: 40px;
      min-height: 600px;
    }

    .review-text {
      font-size: 22px;
      line-height: 1.8;
    }

    .star {
      font-size: 26px;
    }

    .review-name {
      font-size: 20px;
    }

    .review-location {
      font-size: 18px;
    }

    .review-source {
      font-size: 15px;
    }

    .reviews-carousel__dots {
      gap: 16px;
      margin-top: 48px;
    }

    .carousel-dot {
      width: 12px;
      height: 12px;
    }
  }

  /* Tablet Landscape (750px - 1023px) */
  @media screen and (min-width: 750px) and (max-width: 1023px) and (orientation: landscape) {
    .reviews-carousel__slide {
      padding: 0 60px;
    }

    .review-card {
      width: calc(100vw - 120px);
      max-width: 800px;
      padding: 32px 40px;
      min-height: 280px;
      flex-direction: row;
      align-items: center;
      text-align: left;
    }

    .review-content {
      flex: 1;
      padding-right: 32px;
    }

    .review-text {
      font-size: 20px;
      line-height: 1.6;
      margin-bottom: 0;
    }

    .review-stars {
      margin-bottom: 16px;
    }

    .star {
      font-size: 22px;
      margin: 0 3px;
    }

    .review-footer {
      flex: 0 0 auto;
      border-top: none;
      border-left: 1px solid rgba(0, 0, 0, 0.08);
      padding-top: 0;
      padding-left: 24px;
      text-align: center;
      min-width: 160px;
    }

    .review-name {
      font-size: 18px;
      margin-bottom: 8px;
    }

    .review-location {
      font-size: 16px;
      margin-bottom: 8px;
    }

    .review-source {
      font-size: 13px;
    }

    .carousel-btn {
      width: 44px;
      height: 44px;
    }

    .reviews-carousel__dots {
      gap: 14px;
      margin-top: 40px;
    }

    .carousel-dot {
      width: 11px;
      height: 11px;
    }
  }

  /* Desktop (≥1024px) - Landscape Layout */
  @media screen and (min-width: 1024px) {
    .reviews-carousel__slide {
      padding: 0 80px;
    }

    .review-card {
      width: calc(100vw - 160px);
      max-width: 1000px;
      padding: 48px 56px;
      min-height: 320px;
      flex-direction: row;
      align-items: center;
      text-align: left;
    }

    .review-content {
      flex: 1;
      padding-right: 48px;
    }

    .review-text {
      font-size: 24px;
      line-height: 1.6;
      margin-bottom: 0;
    }

    .review-stars {
      margin-bottom: 24px;
    }

    .star {
      font-size: 22px;
      margin: 0 4px;
    }

    .review-footer {
      flex: 0 0 auto;
      border-top: none;
      border-left: 1px solid rgba(0, 0, 0, 0.08);
      padding-top: 0;
      padding-left: 40px;
      text-align: center;
      min-width: 200px;
    }

    .review-name {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .review-location {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .review-source {
      font-size: 14px;
    }

    .carousel-btn {
      width: 52px;
      height: 52px;
    }

    .reviews-carousel__dots {
      gap: 18px;
      margin-top: 56px;
    }

    .carousel-dot {
      width: 14px;
      height: 14px;
    }
  }

  /* All devices now use simple, clean responsive design */
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carouselId = 'reviews-carousel-{{ section.id }}';
    const carousel = document.getElementById(carouselId);

    if (!carousel) return;

    const slides = carousel.querySelectorAll('.reviews-carousel__slide');
    const prevBtn = carousel.closest('.reviews-carousel-section').querySelector('.carousel-prev');
    const nextBtn = carousel.closest('.reviews-carousel-section').querySelector('.carousel-next');
    const dots = carousel.closest('.reviews-carousel-section').querySelectorAll('.carousel-dot');

    let currentSlide = 0;
    let autoSlideInterval;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.style.transform = `translateX(-${index * 100}%)`;
      });

      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });

      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(prev);
    }

    function startAutoSlide() {
      autoSlideInterval = setInterval(nextSlide, 5000);
    }

    function stopAutoSlide() {
      if (autoSlideInterval) {
        clearInterval(autoSlideInterval);
      }
    }

    // Event listeners
    if (nextBtn)
      nextBtn.addEventListener('click', () => {
        nextSlide();
        resetAutoSlide();
      });

    if (prevBtn)
      prevBtn.addEventListener('click', () => {
        prevSlide();
        resetAutoSlide();
      });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        resetAutoSlide();
      });
    });

    function resetAutoSlide() {
      stopAutoSlide();
      startAutoSlide();
    }

    // Pause on hover
    carousel.addEventListener('mouseenter', stopAutoSlide);
    carousel.addEventListener('mouseleave', startAutoSlide);

    // Initialize
    showSlide(0);
    startAutoSlide();
  });
</script>

