{% comment %}
  ========================================
  REPKA ARTS - LOCAL SEO OPTIMIZATION
  Location-Based SEO for Art Gallery
  Google My Business & Local Search
  ========================================
{% endcomment %}

{%- liquid
  comment
    Local SEO configuration for Repka Arts
  endcomment
  assign business_name = shop.name
  assign business_type = 'Art Gallery'
  assign business_description = 'Premium art gallery specializing in watercolor paintings, ceramic art, custom commissions, and fine art prints. Original artwork by talented artists with worldwide shipping.'
  assign business_address = 'Spain'
  assign business_phone = shop.phone | default: '+34-XXX-XXX-XXX'
  assign business_email = shop.email
  assign business_hours = 'Lunes-Viernes: 9:00-18:00, Sábado: 10:00-16:00, Domingo: Cerrado'
  assign business_services = 'Venta de Arte, Comisiones Personalizadas, Consultoría de Arte, Servicios de Enmarcado, Envío Mundial'
-%}

{% comment %} Local Business Schema Markup {% endcomment %}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ArtGallery",
    "name": "{{ business_name }}",
    "description": "{{ business_description }}",
    "url": "{{ shop.url }}",
    "telephone": "{{ business_phone }}",
    "email": "{{ business_email }}",
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "ES",
    "addressRegion": "Spain"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "40.4168",
    "longitude": "-3.7038"
  },
    "openingHours": [
      "Mo-Fr 09:00-18:00",
      "Sa 10:00-16:00"
    ],
    "priceRange": "$$",
    "paymentAccepted": ["Credit Card", "PayPal", "Shopify Pay"],
    "currenciesAccepted": "USD",
    "hasMap": "{{ shop.url }}/pages/contact",
    "sameAs": [
      {% if settings.social_facebook_link != blank %}"{{ settings.social_facebook_link }}",{% endif %}
      {% if settings.social_instagram_link != blank %}"{{ settings.social_instagram_link }}",{% endif %}
      {% if settings.social_twitter_link != blank %}"{{ settings.social_twitter_link }}"{% endif %}
    ],
    "serviceArea": {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": "40.7128",
        "longitude": "-74.0060"
      },
      "geoRadius": "10000000"
    },
    "areaServed": {
      "@type": "Country",
      "name": "Worldwide"
    },
    "makesOffer": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Watercolor Paintings",
          "description": "Original watercolor artwork and custom commissions"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Ceramic Art",
          "description": "Handmade ceramic sculptures and pottery"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Custom Art Commissions",
          "description": "Personalized artwork commissions in various mediums"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Fine Art Prints",
          "description": "High-quality art prints and reproductions"
        }
      }
    ]
  }
</script>

{% comment %} Local Business Meta Tags {% endcomment %}
<meta name="geo.region" content="US">
<meta name="geo.placename" content="United States">
<meta name="geo.position" content="40.7128;-74.0060">
<meta name="ICBM" content="40.7128, -74.0060">
<meta name="DC.title" content="{{ business_name }} - {{ business_type }}">
<meta name="business:contact_data:street_address" content="{{ business_address }}">
<meta name="business:contact_data:locality" content="United States">
<meta name="business:contact_data:country_name" content="United States">
<meta name="business:contact_data:phone_number" content="{{ business_phone }}">
<meta name="business:contact_data:email" content="{{ business_email }}">
<meta name="business:contact_data:website" content="{{ shop.url }}">

{% comment %} Local Keywords for SEO {% endcomment %}
<meta
  name="local-keywords"
  content="art gallery near me, local art commissions, art gallery online, watercolor artist near me, ceramic art local, custom art commissions online, art prints online, fine art gallery, contemporary art gallery, original artwork online"
