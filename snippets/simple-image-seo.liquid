{% comment %}
  ========================================
  REPKA ARTS - SIMPLE IMAGE SEO
  Clear, Beautiful Image Descriptions
  Simple & Effective SEO
  ========================================
{% endcomment %}

{%- liquid
  comment
    Generate simple, clear alt text for images
  endcomment
  assign simple_alt_text = ''
  assign simple_title = ''
  assign simple_filename = ''
  
  if template contains 'product' and product
    comment
      Simple, beautiful alt text based on art type
    endcomment
    if product.tags contains 'watercolor'
      assign simple_alt_text = 'Beautiful watercolour painting - ' | append: product.title
    elsif product.tags contains 'oil'
      assign simple_alt_text = 'Rich oil painting - ' | append: product.title
    elsif product.tags contains 'ceramic'
      assign simple_alt_text = 'Handmade ceramic art - ' | append: product.title
    elsif product.tags contains 'commission'
      assign simple_alt_text = 'Custom artwork - ' | append: product.title
    elsif product.tags contains 'print'
      assign simple_alt_text = 'Fine art print - ' | append: product.title
    else
      assign simple_alt_text = 'Original artwork - ' | append: product.title
    endif
    
    comment
      Simple, clear title
    endcomment
    assign simple_title = product.title | append: ' - Original Artwork'
    
    comment
      Simple, clear filename
    endcomment
    assign product_slug = product.title | downcase | replace: ' ', '-' | replace: '&', 'and' | replace: "'", '' | replace: '"', '' | replace: '(', '' | replace: ')', '' | replace: ',', '' | replace: '.', '' | replace: '!', '' | replace: '?', ''
    
    if product.tags contains 'watercolor'
      assign simple_filename = 'watercolour-painting-' | append: product_slug
    elsif product.tags contains 'oil'
      assign simple_filename = 'oil-painting-' | append: product_slug
    elsif product.tags contains 'ceramic'
      assign simple_filename = 'ceramic-art-' | append: product_slug
    elsif product.tags contains 'commission'
      assign simple_filename = 'custom-artwork-' | append: product_slug
    elsif product.tags contains 'print'
      assign simple_filename = 'art-print-' | append: product_slug
    else
      assign simple_filename = 'original-artwork-' | append: product_slug
    endif
    
  elsif template contains 'collection' and collection
    comment
      Simple collection descriptions
    endcomment
    assign simple_alt_text = collection.title | append: ' art collection'
    assign simple_title = collection.title | append: ' Collection'
    assign collection_slug = collection.title | downcase | replace: ' ', '-' | replace: '&', 'and' | replace: "'", '' | replace: '"', '' | replace: '(', '' | replace: ')', '' | replace: ',', '' | replace: '.', '' | replace: '!', '' | replace: '?', ''
    assign simple_filename = 'art-collection-' | append: collection_slug
    
  else
    comment
      General gallery descriptions
    endcomment
    assign simple_alt_text = 'Artwork by ' | append: shop.name
    assign simple_title = 'Original Artwork by ' | append: shop.name
    assign simple_filename = 'artwork-by-' | append: shop.name | downcase | replace: ' ', '-'
  endif
  
  comment
    Keep descriptions short and clear (under 100 characters)
  endcomment
  if simple_alt_text.size > 100
    assign simple_alt_text = simple_alt_text | truncate: 97 | append: '...'
  endif
  
  comment
    Keep titles clear and concise (under 60 characters)
  endcomment
  if simple_title.size > 60
    assign simple_title = simple_title | truncate: 57 | append: '...'
  endif
  
  comment
    Keep filenames reasonable (under 80 characters)
  endcomment
  if simple_filename.size > 80
    assign simple_filename = simple_filename | truncate: 77 | append: '...'
  endif
-%}

{% comment %} Simple Image SEO Data {% endcomment %}
<div class="simple-image-seo" style="display: none;">
  <div class="alt-text">{{ simple_alt_text }}</div>
  <div class="title">{{ simple_title }}</div>
  <div class="filename">{{ simple_filename }}</div>
  <div class="art-type">
    {% if template contains 'product' and product %}
      {% if product.tags contains 'watercolor' %}watercolour painting
      {% elsif product.tags contains 'oil' %}oil painting
      {% elsif product.tags contains 'ceramic' %}ceramic art
      {% elsif product.tags contains 'commission' %}custom artwork
      {% elsif product.tags contains 'print' %}art print
      {% else %}original artwork{% endif %}
    {% elsif template contains 'collection' %}art collection
    {% else %}artwork{% endif %}
  </div>
  <div class="artist">{{ shop.name }}</div>
  <div class="location">Spain</div>
</div>

{% comment %} Simple Meta Tags for Images {% endcomment %}
{% if template contains 'product' and product %}
<meta name="image:alt" content="{{ simple_alt_text | escape }}">
<meta name="image:title" content="{{ simple_title | escape }}">
<meta name="image:filename" content="{{ simple_filename | escape }}">
{% endif %}
