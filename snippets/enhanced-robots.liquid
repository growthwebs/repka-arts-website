{%- liquid
  comment
    Generate enhanced robots.txt directives for repkaarts.com
  endcomment
  assign shop_url = 'https://repkaarts.com'
-%}

{% comment %} Enhanced Robots Meta Tags {% endcomment %}
<meta
  name="robots"
  content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1, max-video-preview:30"
>

{% comment %} Search Engine Specific Instructions {% endcomment %}
<meta name="googlebot" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
<meta name="bingbot" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
<meta name="slurp" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
<meta name="duckduckbot" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">

{% comment %} Page-Specific Robots Instructions {% endcomment %}
{% if template contains 'product' and product %}
  {% if product.available %}
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  {% else %}
    <meta name="robots" content="noindex, nofollow">
  {% endif %}
{% elsif template contains 'collection' and collection %}
  {% if collection.products.size > 0 %}
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  {% else %}
    <meta name="robots" content="noindex, nofollow">
  {% endif %}
{% elsif template contains 'blog' and blog %}
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
{% elsif template contains 'article' and article %}
  {% if article.published_at %}
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  {% else %}
    <meta name="robots" content="noindex, nofollow">
  {% endif %}
{% elsif template contains 'page' and page %}
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
{% endif %}

{% comment %} Crawl Delay for Better Server Performance {% endcomment %}
<meta name="crawl-delay" content="1">

