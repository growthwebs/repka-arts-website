    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_color }};
    opacity: 0.3;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: all 0.3s ease;
  }

  .ai-photo-gallery__dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.2);
  }

