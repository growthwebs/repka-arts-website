{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-photo-gallery-{{ ai_gen_id }} {
    width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-photo-gallery__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-photo-gallery__title-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
  }

  .ai-photo-gallery__carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-photo-gallery__carousel-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.image_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
  }

  .ai-photo-gallery__carousel-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-photo-gallery__item-{{ ai_gen_id }} {
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    {% if block.settings.image_aspect_ratio == 'auto' %}
      width: auto;
    {% elsif block.settings.image_aspect_ratio == 'portrait' %}
      width: 300px;
    {% elsif block.settings.image_aspect_ratio == 'landscape' %}
      width: 400px;
    {% elsif block.settings.image_aspect_ratio == 'square' %}
      width: 350px;
    {% endif %}
  }

  .ai-photo-gallery__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-photo-gallery__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
    {% if block.settings.image_aspect_ratio == 'auto' %}
      height: auto;
    {% elsif block.settings.image_aspect_ratio == 'portrait' %}
      height: 400px;
    {% elsif block.settings.image_aspect_ratio == 'landscape' %}
      height: 300px;
    {% elsif block.settings.image_aspect_ratio == 'square' %}
      height: 350px;
    {% endif %}
  }

  .ai-photo-gallery__item-{{ ai_gen_id }}:hover .ai-photo-gallery__image-{{ ai_gen_id }} {
    {% if block.settings.enable_hover_zoom %}
      transform: scale(1.05);
    {% endif %}
  }

  .ai-photo-gallery__caption-{{ ai_gen_id }} {
    padding: 12px 16px;
    background-color: {{ block.settings.caption_background_color }};
    color: {{ block.settings.caption_text_color }};
    font-size: {{ block.settings.caption_font_size }}px;
    text-align: {{ block.settings.caption_alignment }};
    {% if block.settings.caption_position == 'overlay' %}
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background-color: {{ block.settings.caption_background_color }}e6;
    {% endif %}
  }

  .ai-photo-gallery__placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    {% if block.settings.image_aspect_ratio == 'auto' %}
      height: 300px;
    {% elsif block.settings.image_aspect_ratio == 'portrait' %}
      height: 400px;
    {% elsif block.settings.image_aspect_ratio == 'landscape' %}
      height: 300px;
    {% elsif block.settings.image_aspect_ratio == 'square' %}
