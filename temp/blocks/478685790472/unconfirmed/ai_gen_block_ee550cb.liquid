    {% endif %}
  }

  .ai-photo-gallery__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-photo-gallery__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  .ai-photo-gallery__nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 30px;
  }

  .ai-photo-gallery__nav-button-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-photo-gallery__nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
    transform: scale(1.1);
  }

  .ai-photo-gallery__nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-photo-gallery__nav-button-{{ ai_gen_id }}:disabled:hover {
    transform: scale(1);
  }

  .ai-photo-gallery__nav-button-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-photo-gallery__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

