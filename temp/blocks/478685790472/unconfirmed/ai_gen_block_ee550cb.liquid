<photo-gallery-{{ ai_gen_id }} class="ai-photo-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-photo-gallery__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      {% if block.settings.title_preset == 'h1' %}
        <h1 class="ai-photo-gallery__title-{{ ai_gen_id }} {{ block.settings.title_preset }}">{{ block.settings.title }}</h1>
      {% elsif block.settings.title_preset == 'h2' %}
        <h2 class="ai-photo-gallery__title-{{ ai_gen_id }} {{ block.settings.title_preset }}">{{ block.settings.title }}</h2>
      {% elsif block.settings.title_preset == 'h3' %}
        <h3 class="ai-photo-gallery__title-{{ ai_gen_id }} {{ block.settings.title_preset }}">{{ block.settings.title }}</h3>
      {% elsif block.settings.title_preset == 'h4' %}
        <h4 class="ai-photo-gallery__title-{{ ai_gen_id }} {{ block.settings.title_preset }}">{{ block.settings.title }}</h4>
      {% elsif block.settings.title_preset == 'h5' %}
        <h5 class="ai-photo-gallery__title-{{ ai_gen_id }} {{ block.settings.title_preset }}">{{ block.settings.title }}</h5>
      {% elsif block.settings.title_preset == 'h6' %}
        <h6 class="ai-photo-gallery__title-{{ ai_gen_id }} {{ block.settings.title_preset }}">{{ block.settings.title }}</h6>
      {% else %}
        <h2 class="ai-photo-gallery__title-{{ ai_gen_id }} {{ block.settings.title_preset }}">{{ block.settings.title }}</h2>
      {% endif %}
    {% endif %}

    <div class="ai-photo-gallery__carousel-wrapper-{{ ai_gen_id }}">
      <div class="ai-photo-gallery__carousel-{{ ai_gen_id }}" data-carousel>
        {% for i in (1..12) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign caption_key = 'caption_' | append: i
            assign image = block.settings[image_key]
            assign caption = block.settings[caption_key]
          %}

          {% if image != blank %}
            <div class="ai-photo-gallery__item-{{ ai_gen_id }}">
              <div class="ai-photo-gallery__image-wrapper-{{ ai_gen_id }}">
                <img
                  src="{{ image | image_url: width: 800 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                  class="ai-photo-gallery__image-{{ ai_gen_id }}"
                >
                {% if block.settings.show_captions and caption != blank %}
                  <div class="ai-photo-gallery__caption-{{ ai_gen_id }}">
                    {{ caption }}
                  </div>
                {% endif %}
              </div>
            </div>
          {% elsif i == 1 %}
            <div class="ai-photo-gallery__item-{{ ai_gen_id }}">
              <div class="ai-photo-gallery__placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-photo-gallery__empty-state-{{ ai_gen_id }}">
                  Add your first photo
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% if block.settings.show_navigation %}
      <div class="ai-photo-gallery__nav-{{ ai_gen_id }}">
        <button
          class="ai-photo-gallery__nav-button-{{ ai_gen_id }}"
          data-prev
          aria-label="Previous image"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="ai-photo-gallery__dots-{{ ai_gen_id }}" data-dots></div>

        <button
          class="ai-photo-gallery__nav-button-{{ ai_gen_id }}"
          data-next
          aria-label="Next image"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</photo-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class PhotoGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.carousel = this.querySelector('[data-carousel]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');
        this.items = Array.from(this.carousel.querySelectorAll('.ai-photo-gallery__item-{{ ai_gen_id }}'));
        this.currentIndex = 0;
      }

      connectedCallback() {
        if (this.items.length === 0) return;

        this.createDots();
        this.updateNavigation();

        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.scrollPrev());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.scrollNext());
        }

        this.carousel.addEventListener('scroll', () => {
          this.updateCurrentIndex();
        });

        let touchStartX = 0;
        let touchEndX = 0;

        this.carousel.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        });

        this.carousel.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe(touchStartX, touchEndX);
        });
      }

      createDots() {
        if (!this.dotsContainer) return;

        this.items.forEach((item, index) => {
          const dot = document.createElement('button');
          dot.classList.add('ai-photo-gallery__dot-{{ ai_gen_id }}');
          dot.setAttribute('aria-label', 'Go to image ' + (index + 1));
          if (index === 0) dot.classList.add('active');

          dot.addEventListener('click', () => {
            this.scrollToIndex(index);
          });

          this.dotsContainer.appendChild(dot);
        });
      }

      updateCurrentIndex() {
        const scrollLeft = this.carousel.scrollLeft;
        const itemWidth = this.items[0].offsetWidth;
        const gap = parseInt('{{ block.settings.image_gap }}');
        this.currentIndex = Math.round(scrollLeft / (itemWidth + gap));
        this.updateNavigation();
      }

      updateNavigation() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }

        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex >= this.items.length - 1;
        }

        if (this.dotsContainer) {
          const dots = this.dotsContainer.querySelectorAll('.ai-photo-gallery__dot-{{ ai_gen_id }}');
          dots.forEach((dot, index) => {
            if (index === this.currentIndex) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }
      }

      scrollPrev() {
        if (this.currentIndex > 0) {
          this.scrollToIndex(this.currentIndex - 1);
        }
      }

      scrollNext() {
        if (this.currentIndex < this.items.length - 1) {
          this.scrollToIndex(this.currentIndex + 1);
        }
      }

      scrollToIndex(index) {
        const itemWidth = this.items[0].offsetWidth;
        const gap = parseInt('{{ block.settings.image_gap }}');
        const scrollPosition = index * (itemWidth + gap);
        this.carousel.scrollTo({
          left: scrollPosition,
          behavior: 'smooth'
        });
        this.currentIndex = index;
        this.updateNavigation();
      }

      handleSwipe(startX, endX) {
        const swipeThreshold = 50;
        const diff = startX - endX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.scrollNext();
          } else {
            this.scrollPrev();
          }
        }
      }
    }

    customElements.define('photo-gallery-{{ ai_gen_id }}', PhotoGallery{{ ai_gen_id }});
  })();
</script>

