{% doc %}
  @prompt
    I want to pull comments from google customer reviews
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-google-reviews-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-google-reviews-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-google-reviews-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.reviews_spacing }}px;
  }

  .ai-google-reviews-title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
  }

  .ai-google-reviews-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
  }

  .ai-google-reviews-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.reviews_spacing }}px;
    margin-top: {{ block.settings.reviews_spacing }}px;
  }

  .ai-google-review-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 0.1 }} {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_spread }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .ai-google-review-card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 0.15 }} {{ block.settings.card_shadow_blur | plus: 5 }}px {{ block.settings.card_shadow_spread | plus: 2 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 1.2 }});
  }

  .ai-google-review-header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 16px;
  }

  .ai-google-review-customer-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-google-review-avatar-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.avatar_background_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ block.settings.avatar_size | divided_by: 2 }}px;
    font-weight: 600;
    color: {{ block.settings.avatar_text_color }};
    flex-shrink: 0;
  }

  .ai-google-review-customer-info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-google-review-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 4px;
    font-family: {{ settings.type_subheading_font.family }}, {{ settings.type_subheading_font.fallback_families }};
  }

  .ai-google-review-date-{{ ai_gen_id }} {
    font-size: {{ block.settings.date_size }}px;
    color: {{ block.settings.date_color }};
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-google-review-rating-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-google-review-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: {{ block.settings.star_color }};
  }

  .ai-google-review-star-empty-{{ ai_gen_id }} {
    fill: {{ block.settings.star_empty_color }};
  }

  .ai-google-review-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.review_text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-google-reviews-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.date_color }};
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-google-reviews-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.reviews_spacing | times: 0.75 }}px;
    }

    .ai-google-review-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-google-reviews-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-google-reviews-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-google-reviews-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-google-reviews-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-google-reviews-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-google-reviews-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_reviews = false %}
    {% for i in (1..6) %}
      {% liquid
        assign review_name_key = 'review_' | append: i | append: '_name'
        assign review_text_key = 'review_' | append: i | append: '_text'
        assign review_rating_key = 'review_' | append: i | append: '_rating'
        assign review_date_key = 'review_' | append: i | append: '_date'

        assign review_name = block.settings[review_name_key]
        assign review_text = block.settings[review_text_key]
        assign review_rating = block.settings[review_rating_key]
        assign review_date = block.settings[review_date_key]
      %}

      {% if review_name != blank or review_text != blank %}
        {% assign has_reviews = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_reviews %}
      <div class="ai-google-reviews-grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign review_name_key = 'review_' | append: i | append: '_name'
            assign review_text_key = 'review_' | append: i | append: '_text'
            assign review_rating_key = 'review_' | append: i | append: '_rating'
            assign review_date_key = 'review_' | append: i | append: '_date'

            assign review_name = block.settings[review_name_key]
            assign review_text = block.settings[review_text_key]
            assign review_rating = block.settings[review_rating_key]
            assign review_date = block.settings[review_date_key]
          %}

          {% if review_name != blank or review_text != blank %}
            <div class="ai-google-review-card-{{ ai_gen_id }}">
              <div class="ai-google-review-header-{{ ai_gen_id }}">
                <div class="ai-google-review-customer-{{ ai_gen_id }}">
                  <div class="ai-google-review-avatar-{{ ai_gen_id }}">
                    {% if review_name != blank %}
                      {{ review_name | slice: 0 | upcase }}
                    {% else %}
                      ?
                    {% endif %}
                  </div>
                  <div class="ai-google-review-customer-info-{{ ai_gen_id }}">
                    <h3 class="ai-google-review-name-{{ ai_gen_id }}">
                      {% if review_name != blank %}
                        {{ review_name }}
                      {% else %}
                        Anonymous Customer
                      {% endif %}
                    </h3>
                    {% if review_date != blank %}
                      <p class="ai-google-review-date-{{ ai_gen_id }}">{{ review_date }}</p>
                    {% endif %}
                  </div>
                </div>
                <div class="ai-google-review-rating-{{ ai_gen_id }}">
                  {% for star in (1..5) %}
                    <svg
                      class="ai-google-review-star-{{ ai_gen_id }} {% if star > review_rating %}ai-google-review-star-empty-{{ ai_gen_id }}{% endif %}"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {% endfor %}
                </div>
              </div>
              {% if review_text != blank %}
                <p class="ai-google-review-text-{{ ai_gen_id }}">{{ review_text }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-google-reviews-empty-{{ ai_gen_id }}">
        <p>Add your Google customer reviews to display them here</p>
      </div>
    {% endif %}
  </div>
</div>

