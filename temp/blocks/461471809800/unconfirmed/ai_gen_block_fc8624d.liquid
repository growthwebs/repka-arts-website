    I want to pull comments from google customer reviews, I want it to be a carrousel that automatically scrolls, with arrows on the side and a button to add a review that links here:
    
    https://g.page/r/CayzyjuKe2f6EBM/review
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-google-reviews-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-google-reviews-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-google-reviews-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.reviews_spacing }}px;
  }

  .ai-google-reviews-title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
  }

  .ai-google-reviews-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
  }

  .ai-google-reviews-add-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background_color }};
  }

  .ai-google-reviews-add-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_background_color }};
    transform: translateY(-1px);
  }

  .ai-google-reviews-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-top: {{ block.settings.reviews_spacing }}px;
  }

  .ai-google-reviews-carousel-{{ ai_gen_id }} {
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
  }

  .ai-google-reviews-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    will-change: transform;
  }

  .ai-google-review-slide-{{ ai_gen_id }} {
    flex: 0 0 100%;
    padding: 0 {{ block.settings.reviews_spacing | divided_by: 2 }}px;
  }

  .ai-google-review-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 0.1 }} {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_spread }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .ai-google-review-header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 16px;
  }

  .ai-google-review-customer-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-google-review-avatar-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.avatar_background_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ block.settings.avatar_size | divided_by: 2 }}px;
    font-weight: 600;
    color: {{ block.settings.avatar_text_color }};
    flex-shrink: 0;
  }

  .ai-google-review-customer-info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-google-review-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 4px;
    font-family: {{ settings.type_subheading_font.family }}, {{ settings.type_subheading_font.fallback_families }};
  }

  .ai-google-review-date-{{ ai_gen_id }} {
    font-size: {{ block.settings.date_size }}px;
    color: {{ block.settings.date_color }};
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-google-review-rating-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-google-review-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: {{ block.settings.star_color }};
  }

  .ai-google-review-star-empty-{{ ai_gen_id }} {
    fill: {{ block.settings.star_empty_color }};
  }

  .ai-google-review-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.review_text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    flex-grow: 1;
  }

  .ai-google-reviews-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_background_color }};
    color: {{ block.settings.arrow_color }};
    border: none;
    border-radius: 50%;
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    z-index: 2;
  }

  .ai-google-reviews-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background_color }};
    color: {{ block.settings.arrow_hover_color }};
    transform: translateY(-50%) scale(1.1);
  }

  .ai-google-reviews-nav-prev-{{ ai_gen_id }} {
    left: -{{ block.settings.arrow_size | divided_by: 2 }}px;
  }

  .ai-google-reviews-nav-next-{{ ai_gen_id }} {
    right: -{{ block.settings.arrow_size | divided_by: 2 }}px;
  }

  .ai-google-reviews-nav-{{ ai_gen_id }} svg {
    width: {{ block.settings.arrow_size | divided_by: 2 }}px;
    height: {{ block.settings.arrow_size | divided_by: 2 }}px;
  }

  .ai-google-reviews-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: {{ block.settings.reviews_spacing }}px;
  }

  .ai-google-reviews-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
  }

  .ai-google-reviews-dot-active-{{ ai_gen_id }} {
    background-color: {{ block.settings.dot_active_color }};
    transform: scale(1.2);
  }

  .ai-google-reviews-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.date_color }};
    font-style: italic;
  }

  @media screen and (min-width: 750px) {
    .ai-google-review-slide-{{ ai_gen_id }} {
      flex: 0 0 {{ 100 | divided_by: block.settings.slides_per_view }}%;
    }
  }

