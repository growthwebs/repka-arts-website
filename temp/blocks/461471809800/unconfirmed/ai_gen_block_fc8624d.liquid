    }

    .ai-google-review-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<google-reviews-carousel-{{ ai_gen_id }}
  class="ai-google-reviews-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  data-slides-per-view="{{ block.settings.slides_per_view }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-google-reviews-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-google-reviews-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-google-reviews-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-google-reviews-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
        {% if block.settings.show_add_review_button %}
          <a
            href="{{ block.settings.google_review_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="ai-google-reviews-add-button-{{ ai_gen_id }}"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            {{ block.settings.add_review_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_reviews = false %}
    {% assign review_count = 0 %}
    {% for i in (1..6) %}
      {% liquid
        assign review_name_key = 'review_' | append: i | append: '_name'
        assign review_text_key = 'review_' | append: i | append: '_text'
        assign review_rating_key = 'review_' | append: i | append: '_rating'
        assign review_date_key = 'review_' | append: i | append: '_date'

        assign review_name = block.settings[review_name_key]
        assign review_text = block.settings[review_text_key]
        assign review_rating = block.settings[review_rating_key]
        assign review_date = block.settings[review_date_key]
      %}

      {% if review_name != blank or review_text != blank %}
        {% assign has_reviews = true %}
        {% assign review_count = review_count | plus: 1 %}
      {% endif %}
    {% endfor %}

    {% if has_reviews %}
      <div class="ai-google-reviews-carousel-wrapper-{{ ai_gen_id }}">
        <div class="ai-google-reviews-carousel-{{ ai_gen_id }}">
          <div class="ai-google-reviews-track-{{ ai_gen_id }}">
            {% for i in (1..6) %}
              {% liquid
                assign review_name_key = 'review_' | append: i | append: '_name'
                assign review_text_key = 'review_' | append: i | append: '_text'
                assign review_rating_key = 'review_' | append: i | append: '_rating'
                assign review_date_key = 'review_' | append: i | append: '_date'

                assign review_name = block.settings[review_name_key]
                assign review_text = block.settings[review_text_key]
                assign review_rating = block.settings[review_rating_key]
                assign review_date = block.settings[review_date_key]
              %}

              {% if review_name != blank or review_text != blank %}
                <div class="ai-google-review-slide-{{ ai_gen_id }}">
                  <div class="ai-google-review-card-{{ ai_gen_id }}">
                    <div class="ai-google-review-header-{{ ai_gen_id }}">
                      <div class="ai-google-review-customer-{{ ai_gen_id }}">
                        <div class="ai-google-review-avatar-{{ ai_gen_id }}">
                          {% if review_name != blank %}
                            {{ review_name | slice: 0 | upcase }}
                          {% else %}
                            ?
                          {% endif %}
                        </div>
                        <div class="ai-google-review-customer-info-{{ ai_gen_id }}">
                          <h3 class="ai-google-review-name-{{ ai_gen_id }}">
                            {% if review_name != blank %}
                              {{ review_name }}
                            {% else %}
                              Anonymous Customer
                            {% endif %}
                          </h3>
                          {% if review_date != blank %}
                            <p class="ai-google-review-date-{{ ai_gen_id }}">{{ review_date }}</p>
                          {% endif %}
                        </div>
                      </div>
                      <div class="ai-google-review-rating-{{ ai_gen_id }}">
                        {% for star in (1..5) %}
                          <svg
                            class="ai-google-review-star-{{ ai_gen_id }} {% if star > review_rating %}ai-google-review-star-empty-{{ ai_gen_id }}{% endif %}"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                          </svg>
                        {% endfor %}
                      </div>
                    </div>
                    {% if review_text != blank %}
                      <p class="ai-google-review-text-{{ ai_gen_id }}">{{ review_text }}</p>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        {% if review_count > block.settings.slides_per_view %}
          <button class="ai-google-reviews-nav-{{ ai_gen_id }} ai-google-reviews-nav-prev-{{ ai_gen_id }}" aria-label="Previous reviews">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
            </svg>
          </button>
          <button class="ai-google-reviews-nav-{{ ai_gen_id }} ai-google-reviews-nav-next-{{ ai_gen_id }}" aria-label="Next reviews">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
            </svg>
          </button>
        {% endif %}

        {% if block.settings.show_dots and review_count > block.settings.slides_per_view %}
          <div class="ai-google-reviews-dots-{{ ai_gen_id }}">
            {% assign total_slides = review_count | minus: block.settings.slides_per_view | plus: 1 %}
            {% for i in (1..total_slides) %}
              <button
                class="ai-google-reviews-dot-{{ ai_gen_id }} {% if forloop.first %}ai-google-reviews-dot-active-{{ ai_gen_id }}{% endif %}"
                aria-label="Go to slide {{ i }}"
                data-slide="{{ forloop.index0 }}"
              ></button>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="ai-google-reviews-empty-{{ ai_gen_id }}">
        <p>Add your Google customer reviews to display them here</p>
      </div>
    {% endif %}
  </div>
</google-reviews-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class GoogleReviewsCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
        this.isTransitioning = false;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-google-reviews-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-google-review-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-google-reviews-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-google-reviews-nav-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-google-reviews-dot-{{ ai_gen_id }}');
        
        this.autoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
        this.slidesPerView = parseInt(this.dataset.slidesPerView);
        this.totalSlides = this.slides.length;
        this.maxSlide = Math.max(0, this.totalSlides - this.slidesPerView);

        this.setupEventListeners();
        this.updateSlidePosition();
        
        if (this.autoplay && this.totalSlides > this.slidesPerView) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplay && this.totalSlides > this.slidesPerView) {
            this.startAutoplay();
          }
        });
      }

      updateSlidePosition() {
        if (!this.track) return;
        
        const translateX = -(this.currentSlide * (100 / this.slidesPerView));
        this.track.style.transform = `translateX(${translateX}%)`;
        
        this.updateDots();
      }

      updateDots() {
        this.dots.forEach((dot, index) => {
          dot.classList.toggle('ai-google-reviews-dot-active-{{ ai_gen_id }}', index === this.currentSlide);
        });
      }

      nextSlide() {
        if (this.isTransitioning) return;
        
        this.isTransitioning = true;
        this.currentSlide = this.currentSlide >= this.maxSlide ? 0 : this.currentSlide + 1;
        this.updateSlidePosition();
        
        setTimeout(() => {
          this.isTransitioning = false;
        }, 500);
      }

      prevSlide() {
        if (this.isTransitioning) return;
        
        this.isTransitioning = true;
        this.currentSlide = this.currentSlide <= 0 ? this.maxSlide : this.currentSlide - 1;
        this.updateSlidePosition();
        
        setTimeout(() => {
          this.isTransitioning = false;
        }, 500);
      }

      goToSlide(slideIndex) {
        if (this.isTransitioning || slideIndex === this.currentSlide) return;
        
        this.isTransitioning = true;
        this.currentSlide = Math.min(slideIndex, this.maxSlide);
        this.updateSlidePosition();
        
        setTimeout(() => {
          this.isTransitioning = false;
        }, 500);
      }

      startAutoplay() {
        this.stopAutoplay();
        if (this.totalSlides > this.slidesPerView) {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, this.autoplaySpeed);
        }
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('google-reviews-carousel-{{ ai_gen_id }}', GoogleReviewsCarousel{{ ai_gen_id }});
  })();
</script>

