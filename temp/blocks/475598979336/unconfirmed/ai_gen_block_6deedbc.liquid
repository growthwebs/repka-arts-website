{% doc %}
  @prompt
    I need a block really similar to the collections-link, but listing the related locations field which has multiple references to the metaobject locations
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-locations-list-{{ ai_gen_id }} {
    padding: {{ block.settings.spacing_top }}px 0 {{ block.settings.spacing_bottom }}px;
  }

  .ai-locations-list__container-{{ ai_gen_id }} {
    max-width: 100%;
  }

  .ai-locations-list__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-locations-list__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-locations-list__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-locations-list__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-locations-list__link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .ai-locations-list__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_ratio }}%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-locations-list__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-locations-list__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-locations-list__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-locations-list__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-locations-list__title-{{ ai_gen_id }} {
    margin: 0 0 8px;
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    line-height: 1.3;
  }

  .ai-locations-list__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
  }

  .ai-locations-list__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 989px) {
    .ai-locations-list__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-locations-list__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-locations-list__content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }

    .ai-locations-list__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-locations-list__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-locations-list-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-locations-list__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-locations-list__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.locations != blank and block.settings.locations.size > 0 %}
      <ul class="ai-locations-list__grid-{{ ai_gen_id }}">
        {% for location in block.settings.locations %}
          {% assign location_obj = location %}
          <li class="ai-locations-list__item-{{ ai_gen_id }}">
            {% if location_obj.url %}
              <a href="{{ location_obj.url }}" class="ai-locations-list__link-{{ ai_gen_id }}">
            {% else %}
              <div class="ai-locations-list__link-{{ ai_gen_id }}">
            {% endif %}
              
              {% if block.settings.show_image %}
                <div class="ai-locations-list__image-wrapper-{{ ai_gen_id }}">
                  {% if location_obj.image %}
                    <img
                      src="{{ location_obj.image | image_url: width: 800 }}"
                      alt="{{ location_obj.image.alt | default: location_obj.title | escape }}"
                      class="ai-locations-list__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="800"
                      height="{{ 800 | times: block.settings.image_ratio | divided_by: 100 }}"
                    >
                  {% else %}
                    <div class="ai-locations-list__image-placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              <div class="ai-locations-list__content-{{ ai_gen_id }}">
                {% if location_obj.title %}
                  <h3 class="ai-locations-list__title-{{ ai_gen_id }}">{{ location_obj.title }}</h3>
                {% endif %}
                
                {% if block.settings.show_description and location_obj.description %}
                  <p class="ai-locations-list__description-{{ ai_gen_id }}">
                    {{ location_obj.description | strip_html | truncate: block.settings.description_length }}
                  </p>
                {% endif %}
              </div>

            {% if location_obj.url %}
              </a>
            {% else %}
              </div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="ai-locations-list__empty-{{ ai_gen_id }}">
        Next, add related locations to display them here
      </div>
    {% endif %}
  </div>
</div>

