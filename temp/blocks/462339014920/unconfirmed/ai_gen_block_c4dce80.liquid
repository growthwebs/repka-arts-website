{% doc %}
  @prompt
    I want a simple section with 2 "groups" (as shopify call them)
    
    1st group with:
    title (let me modify it)
    text (let me modify it)
    
    2nd group with:
    text
    
    You need to let me control the positioning of the section and groups, and all elements
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-flexible-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.section_background_color }};
    display: flex;
    flex-direction: {{ block.settings.section_layout }};
    justify-content: {{ block.settings.section_horizontal_alignment }};
    align-items: {{ block.settings.section_vertical_alignment }};
    gap: {{ block.settings.section_gap }}px;
    min-height: {{ block.settings.section_min_height }}px;
    text-align: {{ block.settings.section_text_alignment }};
  }

  .ai-flexible-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.group_gap }}px;
    padding: {{ block.settings.group_padding }}px;
    background-color: {{ block.settings.group_background_color }};
    border-radius: {{ block.settings.group_border_radius }}px;
    {% if block.settings.group_border_width > 0 %}
      border: {{ block.settings.group_border_width }}px solid {{ block.settings.group_border_color }};
    {% endif %}
    {% if block.settings.section_layout == 'row' %}
      flex: {{ block.settings.group_flex_grow }};
    {% endif %}
  }

  .ai-flexible-group-1-{{ ai_gen_id }} {
    justify-content: {{ block.settings.group_1_vertical_alignment }};
    align-items: {{ block.settings.group_1_horizontal_alignment }};
    text-align: {{ block.settings.group_1_text_alignment }};
    order: {{ block.settings.group_1_order }};
  }

  .ai-flexible-group-2-{{ ai_gen_id }} {
    justify-content: {{ block.settings.group_2_vertical_alignment }};
    align-items: {{ block.settings.group_2_horizontal_alignment }};
    text-align: {{ block.settings.group_2_text_alignment }};
    order: {{ block.settings.group_2_order }};
  }

  .ai-flexible-title-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    line-height: {{ block.settings.title_line_height }};
    {% if block.settings.title_text_transform != 'none' %}
      text-transform: {{ block.settings.title_text_transform }};
    {% endif %}
  }

  .ai-flexible-text-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_font_size }}px;
    line-height: {{ block.settings.text_line_height }};
  }

  @media screen and (max-width: 749px) {
    .ai-flexible-section-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_section_layout }};
      padding: {{ block.settings.mobile_section_padding }}px;
      gap: {{ block.settings.mobile_section_gap }}px;
      text-align: {{ block.settings.mobile_section_text_alignment }};
    }

    .ai-flexible-group-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_group_padding }}px;
    }

    .ai-flexible-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_font_size }}px;
    }

    .ai-flexible-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_font_size }}px;
    }
  }
{% endstyle %}

<div
  class="ai-flexible-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-flexible-group-{{ ai_gen_id }} ai-flexible-group-1-{{ ai_gen_id }}">
    {% if block.settings.group_1_title != blank %}
      <h2 class="ai-flexible-title-{{ ai_gen_id }}">{{ block.settings.group_1_title }}</h2>
    {% endif %}
    {% if block.settings.group_1_text != blank %}
      <div class="ai-flexible-text-{{ ai_gen_id }}">{{ block.settings.group_1_text }}</div>
    {% endif %}
  </div>

  <div class="ai-flexible-group-{{ ai_gen_id }} ai-flexible-group-2-{{ ai_gen_id }}">
    {% if block.settings.group_2_text != blank %}
      <div class="ai-flexible-text-{{ ai_gen_id }}">{{ block.settings.group_2_text }}</div>
    {% endif %}
  </div>
</div>

